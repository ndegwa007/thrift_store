<%= form_with model: product, local: true, html: { multipart: true } do |form| %>
 
  <div>
   <%= form.label :name %>
   <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.rich_text_area :description %>
  </div>

  <div>
     <%= form.label :images, style: "display: block" %>
     <%= form.file_field :images, name: "product[images][]", accept: "image/*", multiple: true, direct_upload: true %>
  </div>

  <div>
    <%= form.label :inventory_count, style: "display: block" %>
    <%= form.number_field :inventory_count %>
  </div>
  
  <div>
   <%= form.submit %>
  </div>
<% end %>
